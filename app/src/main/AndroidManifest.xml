<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gamze.pawsbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.PostDetailActivity"></activity>
        <activity android:name=".Activities.ThereProfileActivity" />
        <activity android:name=".Activities.AddPostActivity" />
        <activity
            android:name=".Activities.ChatActivity"
            android:theme="@style/AppThemeNo" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.RegisterActivity" />
        <activity android:name=".Activities.MainActivity" />

        //file provider tanımlanması
        //android:exported özelliğini false yap
        //FileProvider public olmak zorunda değil
        //android:grandUriPermissions özelliğini  true yap -> dosyalara geçiçi erişim izni vermek için
        <provider
            android:authorities="com.gamze.pawsbook.fileprovider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths">
            </meta-data>

        </provider>

    </application>
    <uses-permission
        android:name="android.permission.CAMERA"
        android:maxSdkVersion="29" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

</manifest>